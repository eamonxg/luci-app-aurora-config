{
  "luci-app-aurora": {
    "description": "Grant access to Aurora theme configuration",
    "read": {
      "uci": ["aurora"],
      "ubus": {
        "luci.aurora": [
          "list_icons",
          "get_installed_versions",
          "check_updates",
          "get_system_info"
        ],
        "file": ["read", "list", "stat"]
      },
      "file": {
        "/tmp/aurora_icon.tmp": ["read", "write"],
        "/tmp/aurora_downloads/*": ["read", "list"],
        "/www/luci-static/aurora/images/*": ["read", "list"]
      }
    },
    "write": {
      "uci": ["aurora"],
      "ubus": {
        "luci.aurora": [
          "upload_icon",
          "remove_icon",
          "download_package",
          "install_package",
          "reset_defaults"
        ],
        "file": ["write", "remove", "exec", "stat"]
      },
      "file": {
        "/tmp/aurora_icon.tmp": ["read", "write"],
        "/tmp/aurora_downloads/*": ["read", "write", "remove"],
        "/www/luci-static/aurora/images/*": ["read", "write", "remove"]
      }
    }
  }
}
